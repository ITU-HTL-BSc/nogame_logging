    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Backend Server",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/app/backend/src/server.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Frontend",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "http-server",
                "${workspaceFolder}/app/frontend/src/public",
                "-p",
                "8080"
            ],
            "console": "integratedTerminal"
        }
    ]
}
